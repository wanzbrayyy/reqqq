<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>
  <meta property="og:title" content="<%= title %>" />
  <meta property="og:description" content="<%= user.bio %>" />
  <meta property="og:url" content="https://<%= req.headers.host %>/<%= username %>" />
  <meta property="og:type" content="website" />
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="<%= seasonalClass || '' %>">
  <nav class="navbar navbar-dark bg-gradient">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">WANZ REQ</a>
      <% if (typeof userId !== 'undefined' && userId) { %>
        <div class="d-flex align-items-center">
          <a href="/dashboard" class="btn btn-outline-light me-2">
            <i class="fas fa-inbox"></i> Inbox
          </a>
          <a href="/logout" class="btn btn-outline-light">
            <i class="fas fa-sign-out-alt"></i> Keluar
          </a>
        </div>
      <% } else { %>
        <div>
          <a href="/login" class="btn btn-outline-light me-2">Masuk</a>
          <a href="/register" class="btn btn-light">Daftar</a>
        </div>
      <% } %>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="card mx-auto fade-in" style="max-width: 600px;">
      <div class="card-body text-center">
        <div class="mb-3">
          <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto"
               style="width: 80px; height: 80px; font-size: 2rem;">
            <%= user.emoji %>
          </div>
          <h2 class="mt-3">@<%= username %></h2>
          <p class="text-muted"><%= user.bio %></p>
        </div>

        <% if (locals.sent) { %>
          <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> Pesan berhasil dikirim!
          </div>
        <% } %>

        <form action="/send" method="POST" id="messageForm">
          <input type="hidden" name="to" value="<%= userId %>">
          <input type="hidden" name="username" value="<%= username %>">
          <% if (locals.replyTo) { %>
            <input type="hidden" name="replyTo" value="<%= replyTo %>">
          <% } %>

          <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select name="category" class="form-select">
              <option value="umum">ğŸ’¬ Umum</option>
              <option value="pujian">ğŸ’– Pujian</option>
              <option value="saran">ğŸ’¡ Saran</option>
              <option value="pertanyaan">â“ Pertanyaan</option>
            </select>
          </div>

          <div class="mb-3 position-relative">
            <textarea 
              class="form-control" 
              name="content" 
              id="messageInput"
              rows="4" 
              placeholder="Tulis pesanmu di sini... (maks 280 karakter)"
              maxlength="280"
              required
            ></textarea>
            <small class="text-muted position-absolute" style="bottom: 8px; right: 12px;" id="charCount">0 / 280</small>
          </div>

          <button type="submit" class="btn btn-success w-100" id="sendBtn">
            <i class="fas fa-paper-plane"></i> Kirim Pesan Anonim
          </button>

          <div class="mt-3 text-center">
            <a href="https://www.instagram.com/stories/create/?url=https://<%= req.headers.host %>/<%= username %>" 
               target="_blank" class="btn btn-sm btn-outline-danger">
              <i class="fab fa-instagram"></i> Bagikan ke Story
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <footer class="bg-dark text-light text-center py-3 mt-5">
    <p class="mb-0">&copy; 2025 Wanz Req. Kirim pesan anonim dengan aman!</p>
  </footer>
  <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="copyToast" class="toast" role="alert">
      <div class="toast-body bg-success text-white d-flex align-items-center">
        <i class="fas fa-check me-2"></i> Link disalin!
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const textarea = document.getElementById('messageInput');
    const charCount = document.getElementById('charCount');
    const sendBtn = document.getElementById('sendBtn');
    if (textarea && charCount && sendBtn) {
      textarea.addEventListener('input', () => {
        const len = textarea.value.length;
        charCount.textContent = `${len} / 280`;
        if (len > 270) charCount.style.color = '#ff2d75';
        else charCount.style.color = '#6c757d';
        sendBtn.disabled = len === 0;
      });
      sendBtn.disabled = true;
    }
  </script>
</body>
</html>