<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>
  <meta property="og:title" content="<%= title %>" />
  <meta property="og:description" content="Kirim pesan anonim dengan Wanz Req â€” bebas, aman, tanpa batas." />
  <% if (locals.username) { %>
  <meta property="og:url" content="https://<%= req.headers.host %>/<%= username %>" />
  <% } %>
  <meta property="og:type" content="website" />
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script>
    // Dark mode otomatis
    if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
      document.body.classList.add('dark-mode');
      localStorage.setItem('darkMode', 'true');
    }
  </script>
</head>
<body class="<%= (typeof darkMode !== 'undefined' && darkMode) ? 'dark-mode' : '' %>">
  <nav class="navbar navbar-dark bg-gradient">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">WANZ REQ</a>
      <% if (typeof userId !== 'undefined' && userId) { %>
        <div class="d-flex align-items-center">
          <button id="themeToggle" class="btn btn-sm btn-outline-light me-2">
            <i class="fas fa-moon"></i>
          </button>
          <a href="/dashboard" class="btn btn-outline-light me-2">
            <i class="fas fa-inbox"></i> Inbox
          </a>
          <a href="/logout" class="btn btn-outline-light">
            <i class="fas fa-sign-out-alt"></i> Keluar
          </a>
        </div>
      <% } else { %>
        <div>
          <a href="/login" class="btn btn-outline-light me-2">Masuk</a>
          <a href="/register" class="btn btn-light">Daftar</a>
        </div>
      <% } %>
    </div>
  </nav>