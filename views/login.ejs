<%- include('partials/header') %>

<style>
  body {
    background: #0f0c29;
    background: -webkit-linear-gradient(to right, #24243e, #302b63, #0f0c29);
    background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
    min-height: 100vh;
    overflow: hidden;
    font-family: 'Segoe UI', system-ui, sans-serif;
  }

  #particles-js {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .login-container {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 20px;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    padding: 2.5rem;
    width: 100%;
    max-width: 480px;
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .glass-card:hover {
    transform: translateY(-8px);
  }

  .form-title {
    font-weight: 800;
    font-size: 2.2rem;
    background: linear-gradient(135deg, #ff9a9e, #fad0c4);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .form-subtitle {
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
    font-size: 1.05rem;
  }

  .input-group {
    position: relative;
    margin-bottom: 1.5rem;
  }

  .input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.6);
    font-size: 1.1rem;
  }

  .form-control {
    width: 100%;
    padding: 16px 16px 16px 48px;
    background: rgba(255, 255, 255, 0.07);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 16px;
    color: white;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    outline: none;
    border-color: #6a11cb;
    background: rgba(255, 255, 255, 0.12);
    box-shadow: 0 0 0 3px rgba(106, 17, 203, 0.3);
  }

  .form-control::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .toggle-password {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
    font-size: 1.1rem;
  }

  .btn-login {
    width: 100%;
    padding: 16px;
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    border: none;
    border-radius: 16px;
    color: white;
    font-weight: 700;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(106, 17, 203, 0.4);
  }

  .btn-login:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 25px rgba(106, 17, 203, 0.6);
  }

  .btn-login:active {
    transform: translateY(0);
  }

  .divider {
    display: flex;
    align-items: center;
    margin: 1.5rem 0;
    color: rgba(255, 255, 255, 0.5);
  }

  .divider::before,
  .divider::after {
    content: "";
    flex: 1;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  }

  .divider span {
    padding: 0 12px;
    font-size: 0.9rem;
  }

  .signup-link {
    text-align: center;
    margin-top: 1.5rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .signup-link a {
    color: #ff9a9e;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }

  .signup-link a:hover {
    text-decoration: underline;
    color: #fad0c4;
  }

  .alert {
    border-radius: 16px;
    padding: 1rem;
    margin-bottom: 1.5rem;
    background: rgba(255, 50, 50, 0.15);
    border: 1px solid rgba(255, 100, 100, 0.3);
    color: #ff9a9e;
  }

  .step {
    display: none;
  }

  .step.active {
    display: block;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0) translateX(-50%); }
    40% { transform: translateY(-10px) translateX(-50%); }
    60% { transform: translateY(-5px) translateX(-50%); }
  }

  @media (max-width: 576px) {
    .glass-card {
      padding: 2rem;
    }
    .form-title {
      font-size: 1.8rem;
    }
  }
</style>

<div id="particles-js"></div>

<div class="login-container">
  <div class="glass-card">
    <h1 class="form-title">Wanz Req</h1>
    <p class="form-subtitle">Masuk untuk melihat pesan anonimmu</p>

    <% if (locals.error) { %>
      <div class="alert">
        <i class="fas fa-exclamation-circle me-2"></i><%= error %>
      </div>
    <% } %>
    <% if (locals.magicSent) { %>
      <div class="alert" style="background: rgba(50, 200, 100, 0.15); border-color: rgba(100, 255, 150, 0.3); color: #a1f5b7;">
        <i class="fas fa-envelope me-2"></i>Link login dikirim ke emailmu! (cek console untuk dev)
      </div>
    <% } %>

    <!-- Step 1: Username/Password -->
    <div id="step1" class="step active">
      <form action="/login" method="POST">
        <div class="input-group">
          <i class="fas fa-user input-icon"></i>
          <input type="text" class="form-control" name="username" placeholder="Username" required autofocus>
        </div>
        <div class="input-group">
          <i class="fas fa-lock input-icon"></i>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
          <button type="button" class="toggle-password" id="togglePassword">
            <i class="fas fa-eye"></i>
          </button>
        </div>
        <button type="submit" class="btn-login">
          <i class="fas fa-sign-in-alt me-2"></i> Masuk
        </button>
      </form>
      <div class="divider"><span>ATAU</span></div>
      <button class="btn btn-outline-light w-100 mb-3" onclick="showStep('step2')">
        <i class="fas fa-magic me-2"></i> Login dengan Email
      </button>
      <div class="signup-link">
        Belum punya akun? <a href="/register">Daftar sekarang</a>
      </div>
    </div>

    <!-- Step 2: Magic Link -->
    <div id="step2" class="step">
      <form action="/magic" method="POST">
        <div class="input-group">
          <i class="fas fa-envelope input-icon"></i>
          <input type="email" class="form-control" name="email" placeholder="Emailmu" required>
        </div>
        <button type="submit" class="btn-login" style="background: linear-gradient(135deg, #ff9a9e, #fad0c4);">
          <i class="fas fa-paper-plane me-2"></i> Kirim Link Login
        </button>
      </form>
      <div class="text-center mt-3">
        <button class="btn btn-sm btn-outline-light" onclick="showStep('step1')">
          <i class="fas fa-arrow-left me-1"></i> Kembali
        </button>
      </div>
    </div>
  </div>
  
  <div class="scroll-indicator">
    <i class="fas fa-chevron-down fa-2x" style="color: rgba(255,255,255,0.5);"></i>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script>
  particlesJS("particles-js", {
    particles: {
      number: { value: 80, density: { enable: true, value_area: 800 } },
      color: { value: "#ffffff" },
      shape: { type: "circle" },
      opacity: { value: 0.1, random: true },
      size: { value: 2, random: true },
      line_linked: {
        enable: true,
        distance: 150,
        color: "#ffffff",
        opacity: 0.05,
        width: 1
      },
      move: {
        enable: true,
        speed: 0.5,
        direction: "none",
        random: true,
        straight: false,
        out_mode: "out",
        bounce: false
      }
    },
    interactivity: {
      detect_on: "canvas",
      events: {
        onhover: { enable: true, mode: "grab" },
        onclick: { enable: true, mode: "push" },
        resize: true
      }
    },
    retina_detect: true
  });

  const toggle = document.getElementById('togglePassword');
  const password = document.getElementById('password');
  if (toggle && password) {
    toggle.addEventListener('click', () => {
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      toggle.innerHTML = type === 'password' ? '<i class="fas fa-eye"></i>' : '<i class="fas fa-eye-slash"></i>';
    });
  }

  function showStep(stepId) {
    document.querySelectorAll('.step').forEach(el => el.classList.remove('active'));
    document.getElementById(stepId).classList.add('active');
  }

  // Keyboard shortcuts
  document.addEventListener('keydown', (e) => {
    if (e.key === 'r' && !e.target.matches('input, textarea')) {
      window.location.href = '/register';
    }
  });
</script>

<%- include('partials/footer') %>